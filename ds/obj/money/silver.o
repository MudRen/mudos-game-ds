// silver.c

inherit MONEY;

void create()
{
	set_name("碎銀", ({"silvers", "silver", "silver_money"}));
	if( clonep() )
		set_default_object(__FILE__);
	else {
		set("money_id", "silver");
		set("long", "白花花的銀子﹐一兩銀子和100文錢有相同的價值。\n");
		set("unit", "些");
		set("base_value", 100);
		set("base_unit", "兩");
		set("base_weight", 50);
	}
	set_amount(1);
}


