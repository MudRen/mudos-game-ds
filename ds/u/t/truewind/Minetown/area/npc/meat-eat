inherit NPC;

void create()
{
        set_name("腐食蟲", ({ "meat-eat worm","worm" }) );
        set("race", "野獸");
        set("age", 1);
        set("level",2);
        set("long", "成天在垃圾堆中打滾的臭蟲，母體會將幼蟲產在腐肉裡。\n");
        set("limbs", ({ "頭部", "身體", "尾巴" }) );
        set("verbs", ({ "bite" }) );
        set("chat_chance", 10);
        set("chat_msg", ({
                (: "random_move" :),
                "腐食蟲粘搭搭的四處爬行著...。\n" }) );
        setup();
}